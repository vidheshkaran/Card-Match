    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+airwatch",
      "url": "/?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import-data",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
